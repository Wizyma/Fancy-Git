{
    "compilerOptions": {
      "module": "commonjs", 
      "target": "es6",
      "outDir": "../dist-server",
      "noImplicitAny": true, 
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true, 
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "**/*",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ]
}